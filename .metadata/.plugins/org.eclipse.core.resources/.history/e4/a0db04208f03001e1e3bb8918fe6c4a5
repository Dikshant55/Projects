package com.Example.StudentMangementSystem;

import java.text.DateFormat;
import java.text.SimpleDateFormat;
import java.util.Date;

import org.springframework.util.NumberUtils;

public class Methods {

	public static String FORMAT="yyyyMMDD";
	public static DateFormat dateFormat =new SimpleDateFormat(FORMAT);
	
	public static Date getDate(String date) {
		try{return dateFormat.parse(date);
		}
		catch (Exception e) {
		}
		return null;
		
	}
	public static boolean isNumber(String value) {
		boolean flag=false;
		
		try {
			NumberUtils.parseNumber(value, Integer.class);
		}
		catch (Exception e) {
			// TODO: handle exception
		}
		return flag;
		
	}	
		
	}

